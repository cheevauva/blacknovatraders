{% extends "layout.twig" %}
{% block title %}{{ tr.l_main_title }}{% endblock %}
{% block content %}
    <br/>
    <FORM ACTION="" METHOD="POST">
        {{ tr.l_chf_therearetotalfightersindest|replace({"[chf_total_sector_fighters]": totalSectorFighters}) }}<br/>
        {% if true %}
            {{ tr.l_chf_creditsdemanded|replace({"[chf_number_fighterstoll]": fightersToll}) }}<br/>
        {% endif %}
        {{ tr.l_chf_youcan }}: <BR>
        {% if true %}
            <INPUT TYPE=RADIO NAME=response CHECKED VALUE=pay>{{ tr.l_chf_inputpay }}</INPUT><BR>
        {% endif %}
        <INPUT TYPE=RADIO NAME=response VALUE=retreat>{{ tr.l_chf_inputretreat }}</INPUT><BR>
        <INPUT TYPE=RADIO NAME=response CHECKED VALUE=fight>{{ tr.l_chf_inputfight }}</INPUT><BR>
        <INPUT TYPE=RADIO NAME=response CHECKED VALUE=sneak>{{ tr.l_chf_inputcloak }}</INPUT><BR>
        <INPUT TYPE=SUBMIT VALUE="{{ tr.l_chf_go }}"><BR><BR>
        <input type=hidden name=sector value="{{ sector }}">
        <input type=hidden name=engage value="1">
        <input type=hidden name=destination value="{{ destination }}">
    </FORM>
{% endblock %}
