{% extends "layout.twig" %}
{% block title %}{{ tr.l_ranks_title }}{% endblock %}
{% block content %}
    <h1>{{ tr.l_score }}</h1>
    <TABLE>
        <TR >
            <TD>{{ tr.l_player }}</TD>
            <TD>{{ tr.l_score }}</TD>
        </tr>
        {% for ship in shipsAsTopScore %}
            <TR >
                <TD>{{ ship.name() }}</TD>
                <TD>{{ ship.score() }}</TD>
            </tr>
        {% endfor %}
    </table>
    <h1>{{ tr.l_turns_used }}</h1>
    <TABLE>
        <TR >
            <TD>{{ tr.l_player }}</TD>
            <TD>{{ tr.l_turns_used }}</TD>
        </tr>
        {% for ship in shipsAsTopScore %}
            <TR >
                <TD>{{ ship.name() }}</TD>
                <TD>{{ ship.turnsUsed() }}</TD>
            </tr>
        {% endfor %}
    </table>
    <h1>{{ tr.l_ranks_good }}</h1>
    <TABLE>
        <TR >
            <TD>{{ tr.l_player }}</TD>
            <TD>{{ tr.l_rating }}</TD>
        </tr>
        {% for ship in shipsAsTopRating %}
            <TR >
                <TD>{{ ship.name() }}</TD>
                <TD>{{ ship.rating() }}</TD>
            </tr>
        {% endfor %}
    </table>
{% endblock %}
